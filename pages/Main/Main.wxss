/* pages/Main/Main.wxss */

page {
  height: 100%;
}

.bgview .backgroundimage {
    height: 100%;
    width: 100%;
    position: fixed;
    z-index: 0;
}

.contentbgview {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 1;
  overflow: scroll;
}

.cityname {
  padding-top: 20px;
  line-height: 40px;
  width: 100%;
  text-align: center;  
  color: #fff;
  font-size: 24px;
  font-weight: bold;
}

.cityweather {
  margin-top: 5px;
  line-height: 20px;
  width: 100%;
  text-align: center;
  color: #fff;
  font-size: 14px;
}

.temprature {
  margin-top: 5px;
  line-height: 40px;
  width: 100%;
  text-align: center;
  color: #fff;
  font-size: 40px;
}

.weekday {
  margin-top: 30px;
  margin-left: 20px;
  line-height: 30px;
  text-align: left;
  color: #fff;
  font-size: 18px;
  float: left;
}

.temp-area {
  margin-top: 30px;
  line-height: 30px;
  margin-right: 30px;
  text-align: right;
  color: #fff;
  font-size: 18px;
}

.today-weather {
  margin-top: 10px;
  background-color: 0xffff00;
  width: 100%;
  height: 100px;
}

.linewhite {
  background-color: #fff;
  width: 100%;
  height: 1px;
}

/* 今日24小时预报 */
.weatherDetailArea {
  margin-top: 10px;
  height: 100px;
  width: 100%;
  display: flex;
  flex-direction: row;
  overflow: scroll;
}

.timepoint {
  padding-top: 0px;
  width: 60px;
  line-height: 20px;
  text-align: center;
  color: #fff;
  font-size: 14px;
}

.weathericon {
  width: 30px;
  height: 30px;
}

.weathertem {
  margin-top: 10px;
  width: 60px;
  line-height: 20px;
  text-align: center;
  color: #fff;
  font-size: 14px;
}

/* 未来一周天气预报 */
.futureWeatherArea {
   margin-top: 2px;
   width: 100%;
   height: 210px;
   line-height: 30px;
   font-size: 18px;
   color: #fff;
   
}

.specialTile {
  font-size: 12px;
  height: 10px;
  line-height: 10px;
}

.specialValue {
  font-size: 24px;
  height: 30px;
  line-height: 30px;
  font-weight: bold;
 
}
