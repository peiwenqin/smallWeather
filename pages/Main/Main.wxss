/* pages/Main/Main.wxss */

page {
  height: 100%;
}

.bgview {
    height: 100%;
    width: 100%;
}

.bgview .backgroundimage {
    height: 100%;
    width: 100%;
    position: fixed;
    z-index: 0;
}

.cityname {
  padding-top: 20px;
  line-height: 50px;
  width: 100%;
  text-align: center;  
  color: #fff;
  font-size: 24px;
  font-weight: bold;
  position: fixed;
  z-index: 1;
}

.cityweather {
  margin-top: 60px;
  line-height: 20px;
  width: 100%;
  text-align: center;
  color: #fff;
  font-size: 14px;
  position: fixed;
  z-index: 1;
}

.temprature {
  margin-top: 80px;
  line-height: 50px;
  width: 100%;
  text-align: center;
  color: #fff;
  font-size: 40px;
  position: fixed;
  z-index: 1;
}

.weekday {
  margin-top: 150px;
  line-height: 30px;
  margin-left: 20px;
  text-align: left;
  width: 300px;
  color: #fff;
  font-size: 18px;
  position: fixed;
  z-index: 1;
}

.temp-area {
  margin-top: 150px;
  line-height: 30px;
  margin-right: 20px;
  text-align: right;
  width: 300px;
  color: #fff;
  font-size: 18px;
  position: fixed;
  z-index: 1;
}

.today-weather {
  margin-top: 180px;
  background-color: 0xffff00;
  width: 100%;
  height: 100px;
  position: fixed;
  z-index: 1;
}