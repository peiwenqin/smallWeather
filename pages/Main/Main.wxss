/* pages/Main/Main.wxss */

page {
  height: 100%;
}

.bgview .backgroundimage {
    height: 100%;
    width: 100%;
    position: fixed;
    z-index: 0;
}

.contentbgview {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 1;
}

.cityname {
  padding-top: 20px;
  line-height: 40px;
  width: 100%;
  text-align: center;  
  color: #fff;
  font-size: 24px;
  font-weight: bold;
}

.cityweather {
  margin-top: 5px;
  line-height: 20px;
  width: 100%;
  text-align: center;
  color: #fff;
  font-size: 14px;
}

.temprature {
  margin-top: 5px;
  line-height: 40px;
  width: 100%;
  text-align: center;
  color: #fff;
  font-size: 40px;
}

.weekday {
  margin-top: 30px;
  line-height: 30px;
  margin-left: 20px;
  text-align: left;
  width: 300px;
  color: #fff;
  font-size: 18px;
  float: right;
}

.temp-area {
  line-height: 30px;
  margin-right: 30px;
  text-align: right;
  width: 300px;
  color: #fff;
  font-size: 18px;
}

.today-weather {
  margin-top: 10px;
  background-color: 0xffff00;
  width: 100%;
  height: 100px;
}

.linewihte {
  background-color: #fff;
  width: 100%;
  height: 1px;
}

.weatherdetailarea {
  margin-top: 10px;
  line-height: 100px;
  /* width: 100%; */
  display: flex;
  flex-direction: row;
}

.timepoint {
  width: 60px;
  line-height: 20px;
  text-align: center;
  color: #fff;
  font-size: 14px;
}

.weathericon {
  margin-left: 10px;
  width: 30px;
  height: 30px;
}

.weathertem {
  width: 60px;
  line-height: 20px;
  text-align: center;
  color: #fff;
  font-size: 14px;
}